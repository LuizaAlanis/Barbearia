@model Barbearia.Models.modelUsuario
@{
    Layout = null;
}



<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meu Aplicativo ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        body {
            background-image: linear-gradient(to right, #4b6cb7, #182848);
        }
    </style>
</head>
<body>
    <div class="abacaxi">
        <div class="animated animatedFadeInUp fadeInUp">
            <div class="caixa">
                <br />
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {

                    <fieldset style="padding:30px 0; margin:40px 0;">
                        <legend class="titulos" style="text-align:center; border:none;">LOGIN</legend>
                        <div>
                            @Html.LabelFor(m => m.usuario) @*Criação do titulo usuario*@
                        </div>
                        <div>
                            @Html.EditorFor(model => model.usuario, new { htmlAttributes = new { @class = "form-control" } })@*Caixa de texto *@
                        </div>
                        <div>
                            @Html.ValidationMessageFor(m => m.usuario, "", new { @class = "aviso" }) @*Mensagem de erro *@
                        </div>
                        <br />
                        <div>
                            @Html.LabelFor(m => m.senha)
                        </div>
                        <div>
                            @Html.PasswordFor(m => m.senha, new { @class = "form-control" })
                        </div>
                        <div>
                            @Html.ValidationMessageFor(m => m.senha, "", new { @class = "aviso" }) @*Mensagem de erro *@
                        </div>
                        <br /><br /><br />
                        <div>
                            <input type="submit" name="btnEnviar" class="button1" value="Login" />
                        </div>

                        @* caso opte por usar a TempData (ótima para casos de redirection to action): <h5>@TempData["Message"]</h5> *@

                        <h5 class="aviso">@ViewBag.acessoNegado</h5> @*Caso o usuário insira dados inválidos *@
                    </fieldset>

                }
            </div>

        </div>
    </div>
    <footer>
        <p> Luiza Alanis </p>
    </footer>
</body>
</html>